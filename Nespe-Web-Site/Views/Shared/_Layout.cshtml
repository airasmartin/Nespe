<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/css/Form.css")
        @Styles.Render("~/Content/themes/olton-Metro-UI-CSS/css/modern.css")
        @Scripts.Render("~/bundles/modernizr")

        @*
        <link href="@Url.Content("~/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css"/>
        <link href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css" rel="stylesheet" type="text/css"/>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
        <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/jquery-ui.min.js"></script>
        *@  

        @Scripts.Render("~/bundles/jquery")
        <script type ="text/javascript" src="@Url.Content("~/Scripts/jquery-ui-1.8.20.js")"></script>
        <script type ="text/javascript" src="@Url.Content("~/Scripts/jquery.validate-vsdoc.js")"></script>

        @RenderSection("scripts", required: false)

        <script type="text/javascript">
            <!--
            $(function () {
                $(".datepicker").datepicker();
                $(".datefield").datepicker({ dateFormat: "dd-mm-yy", altFormat: "dd-mm-yy" });
                $(".dateFieldReadOnly").datepicker({ dateFormat: "dd-mm-yy", altFormat: "dd-mm-yy" }).attr('readonly', 'readonly');
            });
            //-->
        </script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">
                        <a href="@Url.Action("Index", "Home")"><img alt="Nespe" title="Nespe WebSite" height="60" src="@Url.Content("~/Content/themes/base/images/logo_Nestle.png")" /></a>
                    </p>
                </div>
                <div class="float-right">
                    <section id="login">
                        Hello, <span class="username">@User.Identity.Name</span>!
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                            <li>@Html.ActionLink("Départements", "Index", "Department")</li>
                            <li>@Html.ActionLink("Personnes", "Index", "Person")</li>
                            <li>@Html.ActionLink("Personnes et Départements", "Index", "PersonDepartment")</li>
                            <li>@Html.ActionLink("Arrivé", "Index", "ArrivalPersonTaskRequest")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            <div id="datepicker"></div>
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Nespe (Martin Airas)</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
