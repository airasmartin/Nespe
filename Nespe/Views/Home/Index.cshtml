@model Nespe.Models.CurrentStatusModel
@using System.Linq;
@{
    ViewBag.Title = "Nespe - Accueil";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Accueil</h1>
                
            </hgroup>

        </div>
    </section>
}
<h3>Opérations en cours :</h3>
    <fieldset class="ListView">
        <legend>Arrivées :</legend>
        @if (Model.ArrivalRequestSet == null)
        {
            <p>Aucun pour le moment</p>
        }
        else
        {
            @Html.DisplayFor(m => m.ArrivalRequestSet, "Request.Grid.ReadOnly")
        }
    </fieldset>
    <fieldset class="ListView">
        <legend>Transferts :</legend>
        @if (Model.TransfertRequestSet == null)
        {
            <p>Aucun pour le moment</p>
        }
        else
        {
            @Html.DisplayFor(m => m.TransfertRequestSet, "Request.Grid.ReadOnly")
        }
    </fieldset>
    <fieldset class="ListView">
        <legend>Départs :</legend>
        @if (Model.DepartureRequestSet == null)
        {
            <p>Aucun pour le moment</p>
        }
        else
        {
            @Html.DisplayFor(m => m.DepartureRequestSet, "Request.Grid.ReadOnly")
        }
    </fieldset>




