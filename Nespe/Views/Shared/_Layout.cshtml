                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            <div id="datepicker"></div>
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Nespe</p>
                </div>

            </div>
        </footer>

    </body>
