    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("NESPE", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        Hello, <span class="username">@User.Identity.Name</span>!
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                            <li>@Html.ActionLink("Mes opérations", "Index", "MesOperations")</li>
                            <li>@Html.ActionLink("Recherches", "Recherches", "Home")</li>
                            @*<li>@Html.ActionLink("NewRequest", "NewRequest", "Home")</li>*@
                            <li>@Html.ActionLink("Nouvelle demande", "Arrival", "NewRequest")</li>
                            <li>@Html.ActionLink("Administration","Administration","Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Nespe</p>
                </div>

            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
