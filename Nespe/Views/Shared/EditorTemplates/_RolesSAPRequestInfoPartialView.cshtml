@model Nespe.Models.RoleSAPRequestInfo
@using System.ComponentModel.DataAnnotations;
@using Nespe;
@using Nespe.Controllers;


    <table class="Form">
        <caption align ="left"><h5>Infos Rôles SAP  :</h5></caption>
        <tr>
            <td>@Html.RadioButtonFor(x => x.IsRequired, true)Nécessaire</td>
            <td>@Html.RadioButtonFor(x => x.IsRequired, false, new { Checked = "checked" })Non-nécessaire</td>       
        </tr>    
        <tr>
            <td>@Html.RadioButtonFor(x => x.purchaseType, "Requester") Purchase Requester</td>
            <td>@Html.RadioButtonFor(x => x.purchaseType, "Approver") Purchase Approver</td>
        </tr>
        <tr>
            <td>@Html.CheckBoxFor(x => x.pCard)@Html.LabelFor(x => x.pCard)</td>
        </tr>    
        <tr>
            <td>@Html.LabelFor(x => x.Comment)</td>
            <td colspan="2">@Html.TextAreaFor(x => x.Comment, new { @class = "wide" })</td>
        </tr>
    </table>

 