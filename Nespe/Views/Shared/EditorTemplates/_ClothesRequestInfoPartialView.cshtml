@model Nespe.Models.ClothesRequestInfo
@using System.ComponentModel.DataAnnotations;
@using Nespe;
@using Nespe.Controllers;


    <table class="Form">
        <caption align ="left"><h5>Work clothes :</h5></caption>
        <tr>
            <td>@Html.RadioButtonFor(x => x.IsRequired, true)Necessary</td>
            <td>@Html.RadioButtonFor(x => x.IsRequired, false, new { Checked = "checked" })Not necessary</td>       
        </tr>  
        <tr>
            <td></td>
            <td>Size</td>
            <td></td>
            <td>Size</td>
        </tr>    
        <tr>
            <td>@Html.CheckBoxFor(x => x.secuShoes)@Html.LabelFor(x => x.secuShoes)</td>
            <td>@Html.TextBoxFor(x => x.shoeSize)</td>
            <td>@Html.CheckBoxFor(x => x.gloves)@Html.LabelFor(x => x.gloves)</td>
            <td>@Html.TextBoxFor(x => x.glovesSize)</td>
        </tr>
        <tr>
            <td>@Html.CheckBoxFor(x => x.winterCoat)@Html.LabelFor(x => x.winterCoat)</td>
            <td>@Html.TextBoxFor(x => x.winterCoatSize)</td>
            <td>@Html.CheckBoxFor(x => x.polar)@Html.LabelFor(x => x.polar)</td>
            <td>@Html.TextBoxFor(x => x.polarSize)</td>

        </tr>        
        <tr>
            <td>@Html.CheckBoxFor(x => x.bardushClothes)@Html.LabelFor(x => x.bardushClothes)</td>
            <td>@Html.TextBoxFor(x => x.bardusClothesSize)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(x => x.Comment)</td>
            <td colspan="2">@Html.TextAreaFor(x => x.Comment, new { @class = "wide" })</td>
        </tr>
    </table>
  