@model Nespe.Models.IntroRequestInfo
@using System.ComponentModel.DataAnnotations;
@using Nespe;
@using Nespe.Controllers;


    <table class="Form">
        <caption align ="left"><h5>Iinvitation aux intros Dept :</h5></caption>
        <tr>
            <td>@Html.RadioButtonFor(x => x.IsRequired, true)Nécessaire</td>
            <td>@Html.RadioButtonFor(x => x.IsRequired, false, new { Checked = "checked" })Non-nécessaire</td>       
        </tr>            
        <tr>
            <td>@Html.RadioButtonFor(x => x.introLanguage, "Anglais") Anglais</td>
            <td>@Html.RadioButtonFor(x => x.introLanguage, "Français") Français</td>
        </tr>    
        <tr>
            <td>@Html.LabelFor(x => x.Comment)</td>
            <td colspan="2">@Html.TextAreaFor(x => x.Comment, new { @class = "wide" })</td>
        </tr>
    </table>
 