@model Nespe.Models.ITRequestInfo
@using System.ComponentModel.DataAnnotations;
@using Nespe;
@using Nespe.Controllers;
    <table class="Form">
        <caption align ="left"><h5>Infos pour IT Matériel à récupérer:</h5></caption>
        <tr>
            <td>@Html.RadioButtonFor(x => x.IsRequired, true)Nécessaire</td>
            <td>@Html.RadioButtonFor(x => x.IsRequired, false, new { Checked = "checked" })Non-nécessaire</td>       
        </tr>     
        <tr>
            <td>@Html.CheckBoxFor(x => x.Laptop)@Html.LabelFor(x => x.Laptop)</td>
            <td>@Html.CheckBoxFor(x => x.DockingStation)@Html.LabelFor(x => x.DockingStation)</td>
            <td>@Html.CheckBoxFor(x => x.Keyboard)@Html.LabelFor(x => x.Keyboard)</td>
        </tr>
        <tr>
            <td>@Html.CheckBoxFor(x => x.Desktop)@Html.LabelFor(x => x.Desktop)</td>
            <td>@Html.CheckBoxFor(x => x.Screen)@Html.LabelFor(x => x.Screen)</td>
            <td>@Html.CheckBoxFor(x => x.Mouse)@Html.LabelFor(x => x.Mouse)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(x => x.Comment)</td>
            <td colspan="2">@Html.TextAreaFor(x => x.Comment, new { @class = "wide" })</td>
        </tr>
    </table>
 